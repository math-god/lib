<Window x:Class="Library.UI.LibrarianWindows.BookListWindows.AddingBookByIsbnWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Library.UI.LibrarianWindows.BookListWindows"
        mc:Ignorable="d"
        Title="Добавление по ISBN" Height="450" Width="800">
    <Grid>
        <Canvas>
            <Label Canvas.Top="50" Canvas.Left="20">ISBN</Label>
            <TextBox Canvas.Top="55" Canvas.Left="120" Height="18" Width="150" Name="IsbnTextBox" />
            <Button Canvas.Top="55" Canvas.Left="280" Height="20" Width="100" Content="Добавить"
                    Name="InputIsbnButton"
                    Click="InputIsbnButton_OnClick" />

        </Canvas>
    </Grid>
</Window>