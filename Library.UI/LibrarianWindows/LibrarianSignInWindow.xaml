<Window x:Class="Library.UI.LibrarianWindows.LibrarianSignInWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Library"
        mc:Ignorable="d"
        Title="Войти как библиотекарь" Height="350" Width="400">
    <Grid>
        <Canvas>
            <Label FontSize="15" Canvas.Top="5" Canvas.Left="20">Вход</Label>
            <Label Canvas.Top="30" Canvas.Left="20">Email</Label>
            <TextBox Canvas.Top="35" Canvas.Left="100" Height="18" Width="150" Name="EmailTextBox"></TextBox>
            <Label Canvas.Top="50" Canvas.Left="20">Телефон</Label>
            <TextBox Canvas.Top="55" Canvas.Left="100" Height="18" Width="150" Name="PhoneTextBox"></TextBox>
            <Label Canvas.Top="70" Canvas.Left="20">Пароль</Label>
            <PasswordBox Canvas.Top="75" Canvas.Left="100" Height="18" Width="150" Name="PasswordBox"></PasswordBox>
            <Button Canvas.Top="95" Canvas.Left="20" Height="25" Width="40" Click="SignInLibrarian_OnClick">Войти</Button>
        </Canvas>
    </Grid>
</Window>
